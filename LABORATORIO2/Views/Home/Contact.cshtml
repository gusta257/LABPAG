@{
    ViewData["Title"] = "Contact";
}
<style>
html {
	font-size: 20px;
    font-family: 'Lato', sans-serif;
}

body {
	background-color: white;
}
h1{
    float:right ;
    position: absolute;
    top: 160px;
    bottom: 0;
    right: 90px;
    left: 1px;

}

.contacto {
    position: absolute;
    top: 100px;
    bottom: 0;
    right: 50px;
    left: 10px;
	width: 700px;
	height: 450px;
	margin: 5% auto;
}
.container {
  padding-right: 15px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
}

.container-fluid {
  padding-right: 15px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
}

.form__top {
	width: 100%;
	text-align: center;
	padding: 16px 0 17px;
	
	margin-bottom: 16px;
}

.form__top h2 {
	font-weight: bold;
	color: white;
	font-size: 18px;
}

.form__reg {
	padding: 0 2rem;
	display: flex;
	flex-direction: column;
	justify-content: center;
}


.input, .btn__Enviar, .btn__regresar{
	background-color: white;
	padding: .5rem;
	margin: .5rem 0;
	border: none;
	border-bottom: solid black;
	transition: all .5s;
}


.btn__Enviar, .btn__regresar {
	width: 40%;
	border-bottom: none;
	background-color: #31B1E5;
	color: blue;
}


.btn__Enviar:hover {
	background-color: green;
}

.btn__regresar:hover{
	background-color: green;
}
#foto{
    position: absolute;
    top: 160px;
    bottom: 0;
    right: 90px;
    left: 1px;
    
}





</style>
<body>
    <h1> Gustavo De Leon</h1>

	<div class="contacto">
		<div class="form__top">
			<h2>Contact Form </h2>
		</div>	
        
		<form class="form__reg" action="">
			<input class="input" type="text" placeholder="Name">
            <input class="input" type="text" placeholder="Email">
            <input class="input" type="text" placeholder="Comments">
           
            <div class="btn__form">
            	<input class="btn__Enviar" type="submit" value="Send">
            	<input class="btn__regresar" type="reset" value="Return">	
            </div>
		</form>
        
	</div>
	
</body>